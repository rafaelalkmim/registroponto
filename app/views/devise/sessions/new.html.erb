<div class="wrapper wrapper-full-page">
  <div class="page-header login-page header-filter" filter-color="black" style="background-image: url('/images/loginbackground.png'); background-size: cover; background-position: top center;">
    <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->

    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="card card-login card-hidden">
              <div class="card-header text-center" style="border-radius: 10px">
                <img src="/images/clock.png" width="50" height="50" style="border-radius: 10px;margin-top: 50px;">
                <h3 class="card-title">Registro de Ponto</h3>
              </div>
              <div class="card-body ">
              <span class="bmd-form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">person</i>
                    </span>
                  </div>
                  <%= f.text_field :email, autofocus: true, autocomplete: "email" ,class:'form-control', style:'border-radius:5px', placeholder: "Email" %>
                </div>
              </span>
                </br>
                <span class="bmd-form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">lock_outline</i>
                    </span>
                  </div>
                  <%= f.password_field :password, autocomplete: "current-password", class:'form-control', style:'border-radius:5px', placeholder: "Senha" %>
                </div>
              </span>
              </div>
              <div class="card-footer justify-content-center">
                <!-- <a href="#pablo" class="btn btn-rose btn-link btn-lg">Login</a> -->
                <%#= f.submit "Acessar", {:class => "btn btn-rose btn-link btn-lg" }  %>
                <div class="form-group">
                  <div class="col-sm-4 col-sm-offset-2">
                    <%= f.submit "Acessar", class: 'btn btn-primary', style: 'background-color:black;border-radius:5px' %>
                  </div>
                </div>
              </div>
<!--              <%#= link_to new_user_registration_path do %><p class="text-center" style="color: black">Registre-se</p><%# end %>-->
            </div>
          <% end %>
        </div>
      </div>
    </div>